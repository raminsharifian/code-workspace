#!/usr/bin/env bash
# Shell configuration file for VS Code integrated terminal

source ~/.bashrc
source ~/.profile

# Dynamically detect the current shell and initialize Starship
current_shell=$(basename "$SHELL")

case "$current_shell" in
    bash)
        # Initialize Starship for Bash shell
        eval "$(starship init bash)"
        ;;
    zsh)
        # Initialize Starship for Zsh shell  
        eval "$(starship init zsh)"
        ;;
    fish)
        # Initialize Starship for Fish shell
        starship init fish | source
        ;;
    *)
        # Fallback for unsupported shells
        echo "Warning: Starship not configured for $current_shell shell"
        ;;
esac

